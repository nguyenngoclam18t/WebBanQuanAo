
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}
@using BTL_LTWeb.Models;
@model List<CartDetail>
<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="~/Home/Index">Home</a>
                <a class="breadcrumb-item text-dark" href="#">Pages</a>
                <span class="breadcrumb-item active">Shopping Cart</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Products</th>
                        <th>Color</th>
                        <th>Size</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img src="@Url.Content("/Assets/Product/Img/" + item.Picture)" alt="" style="width: 50px;">
                                @item.ProductName
                            </td>
                            <td class="align-middle" id="color-column">@item.Color</td>
                            <td class="align-middle" id="size-column">@item.Size</td>
                            <td class="align-middle">@item.Price</td>
                            <td class="align-middle">
                                <form action="@Url.Action("UpdateCart", "Cart")" method="post">
                                    @Html.Hidden("productId", item.ID)
                                    <div class="input-group quantity mx-auto" style="width: 100px;">
                                        <input type="number" name="quantity" class="form-control form-control-sm bg-secondary border-0 text-center" value="@item.Quantity" style="width: 100px;">
                                        <button type="submit" class="btn btn-sm btn-warning btn-update" style="width: 100px;">
                                            <i class="fa fa-refresh"></i>Update
                                        </button>
                                    </div>
                                </form>
                            </td>
                            <td class="align-middle">@item.Total</td>
                            <td class="align-middle">
                                <a href="@Url.Action("RemoveFromCart", "Cart", new { productId = item.ID })">
                                    <button class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!--================================-->
        <div class="col-lg-4">
            <form class="mb-30" action="">
                <div class="input-group">
                    <div class="input-group-append">
                        <a href="#" id="deleteAllLink" class="btn btn-primary" style="padding:12px">
                            <b>Delete all products</b>
                        </a>
                    </div>
                </div>
            </form>
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Cart Summary</span></h5>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom pb-2">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Quantity</h6>
                        <h6 style="font-weight:bold">@ViewBag.TongSoLuong</h6>
                    </div>
                </div>
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>Total</h5>
                        <h5 style="color:red;font-weight:bold">@String.Format("{0:0,0}", ViewBag.TongThanhTien) VND</h5>
                    </div>
                    <a class="btn btn-block btn-primary font-weight-bold my-3 py-3" href="~/Checkout/Index">Proceed To Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        $("#deleteAllLink").on("click", function (e) {
            e.preventDefault();

            // Gửi yêu cầu xóa tất cả sản phẩm tới action ClearCart
            $.ajax({
                url: '@Url.Action("ClearCart", "Cart")',
                type: 'POST',
                success: function (result) {
                    // Nếu yêu cầu thành công, làm mới trang để cập nhật giỏ hàng
                    location.reload();
                },
                error: function () {
                    // Xử lý lỗi nếu cần thiết
                    alert('Failed to clear cart.');
                }
            });
        });
    });
</script>