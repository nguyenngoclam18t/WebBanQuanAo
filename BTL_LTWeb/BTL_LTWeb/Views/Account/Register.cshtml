
@model BTL_LTWeb.Models.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/Content/style.css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <!--Bootstrap 4-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <title>Log In</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/Assets/Product/Img/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/Assets/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/iconic/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/vendor/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/vendor/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/Main/css/main.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/Main/css/util.css">
    <style>
        body {
            background-image: url('../../Assets/Product/Img/bg-02.jpg');
            background-size: cover;
            background-position: center center;
            background-attachment: fixed;
        }
    </style>
</head>
<body>
    <div class="limiter">
        <div class="container-res100">
            <div class="wrap-res100 p-l-55 p-r-55 p-t-65 p-b-54">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "res100-form validate-form registerForm" }))
                {
                    @Html.AntiForgeryToken()
                    <span class="res100-form-title p-b-49">Register</span>
                    <div class="wrap-input100 validate-input m-b-23" data-validate="Username is required">
                        <span class="label-input100">Your Email</span>
                        <div style="display:flex;justify-content:space-between">
                            <div>

                                @Html.TextBoxFor(m => m.email, new { @class = "input100", placeholder = "Type your email" })
                                <span class="focus-input100" data-symbol="&#xf206;"></span>
                                @Html.ValidationMessageFor(m => m.email, "", new { @class = "field-validation-error" })

                            </div>
                            <div style="align-self:center">
                                <button onclick="sendEmail()" type="button" style="padding:5px;background-color:aquamarine; border-radius:10px">Send Code</button>

                            </div>
                        </div>

                    </div>
                    <div class="wrap-input100 validate-input m-b-23" data-validate="Username is required">
                        <span class="label-input100">Account Name</span>
                        @Html.TextBoxFor(m => m.username, new { @class = "input100", placeholder = "Type your account name" })
                        <span class="focus-input100" data-symbol="&#xf206;"></span>
                        @Html.ValidationMessageFor(m => m.username, "", new { @class = "field-validation-error" })
                    </div>

                    <div class="wrap-input100 validate-input m-b-23" data-validate="Password is required">
                        <span class="label-input100">Password</span>
                        @Html.PasswordFor(m => m.password, new { @class = "input100", placeholder = "Type your password" })
                        <span class="focus-input100" data-symbol="&#xf190;"></span>
                        @Html.ValidationMessageFor(m => m.password, "", new { @class = "field-validation-error" })
                    </div>
                    <div style="margin-bottom: 15px; margin-top:20px; text-align: center">
                        @if (ViewBag.error != null)
                        {
                            <span class="field-validation-error">@ViewBag.error</span>
                        }
                    </div>
                    <div class="wrap-input100 validate-input m-b-23">
                        <span class="label-input100">Code </span>
                        <input type="type" class="CodeEmail" value="" />
                    </div>
                    <div class="container-res100-form-btn">
                        <div class="wrap-res100-form-btn">
                            <div class="res100-form-bgbtn"></div>
                            <button type="submit" class="res100-form-btn">
                                Register
                            </button>
                        </div>
                    </div>

                    <div class="flex-col-c p-t-40">
                        <span class="txt1 p-b-17">
                            Already have an account ?
                        </span>
                        <a class="txt2" href="@Url.Action("LogIn","Account")">LOG IN</a>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="~/Assets/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Assets/vendor/animsition/js/animsition.min.js"></script>
    <script src="~/Assets/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/vendor/select2/select2.min.js"></script>
    <script src="~/Assets/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Assets/vendor/daterangepicker/daterangepicker.js"></script>
    <script src="~/Assets/vendor/countdowntime/countdowntime.js"></script>
    <script src="~/Assets/Main/js/loginmain.js"></script>
    <script src="https://smtpjs.com/v3/smtp.js"></script>
    <script type="text/javascript">
        console.log(1);
        var random;
        function sendEmail() {
            random = generateRandomCode();
            Email.send({
                SecureToken: "2e5d51f3-86b8-41a2-9345-04d559c1e5ba",
                To: document.querySelector("#email").value,
                From: "nguyenngoclam2k3d@gmail.com",
                Subject: "test",
                Body: "Code Xác thực: " + random
            }).then(

            );
        }
        function generateRandomCode() {
            const characters = '0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ';
            let randomCode = '';

            for (let i = 0; i < 4; i++) {
                const randomIndex = Math.floor(Math.random() * characters.length);
                randomCode += characters.charAt(randomIndex);
            }

            return randomCode;
        }
        function testthu() {
            console.log(document.querySelector(".tst").value, random);
        }
        var registerForm = document.querySelector(".registerForm");
        registerForm.addEventListener("submit", function (event) {

            event.preventDefault();
            if (document.querySelector(".CodeEmail").value != random) {
                alert("wrong Code Send Email");
            }
            else {
                registerForm.submit();
            }
        });
    </script>
</body>
</html>