@model List<BTL_LTWeb.Models.Category>
@{
    ViewBag.Title = "GetCategories";
    Layout = null;
}

<div class="container-fluid pt-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Categories (Ajax)</span></h2>
    <div class="row px-xl-5 pb-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <div class="text-decoration-none category-link" href="" data-id="@item.category_id" style="cursor: pointer">
                    <div class="cat-item d-flex align-items-center mb-4">
                        @*<div class="overflow-hidden" style="width: 100px; height: 100px;">
                            <img class="img-fluid" src="~/Assets/Main/img/cat-1.jpg" alt="">
                        </div>*@
                        <div class="flex-fill pl-3" style="margin-top:10px">
                            <h6>@item.category_name</h6>
                            @*<small class="text-body">100 Products</small>*@
                        </div>
                    </div>
                </div>
            </div>
        }
        
    </div>
</div>

